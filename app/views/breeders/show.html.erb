<p id="notice"><%= notice %></p>
<br>
<br>
<div class="row">
  <aside class="col-md-7">
    <section >
    
      <%= image_tag @breeder.image.url(:medium) %>
    
    </section>
  </aside>
<div>
<h2>
  <strong>Name:</strong>
  <%= @breeder.name %>
</h2>

<p>
  <strong>Age:</strong>
  <%= @breeder.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @breeder.gender==0?"Male":"Female" %>
</p>

<p>
  <strong>Breeds:</strong>
  <%= @breeder.breeds %>
</p>

<p>
  <strong>City:</strong>
  <%= @breeder.city %>
</p>

<p>
  <strong>Father:</strong>
  <%= @breeder.father %>
</p>

<p>
  <strong>Mother:</strong>
  <%= @breeder.mother %>
</p>

<p>
  <strong>Health status:</strong>
  <div class="star-rating" data-score=<%= @breeder.health %> ></div>
  
</p>

<p>
  <strong>Injection certificate:</strong>
  <a href="http://cdn.lookanimals.com/pictures/dan.drydog.com/fanniemae/fannie-mae-vaccination-cert-2011.jpg">View</a>
</p>

<p>
  <strong>Owner email:</strong>
  <%= @breeder.user_email %>
</p>
</div>
</div>

<div class="row">
  <aside class="col-md-7">
    
    <h2><%= @breeder.comments.count %> Comments</h2>
    <%= render @breeder.comments %>

    <h3>Add a comment</h3>
    <%= form_for([@breeder, @breeder.comments.build]) do |f| %>
    <p>
      <%= f.label :body %></br>
      <%= f.text_area :body %>
    </p>
    </br>
    <%= f.submit "Create Comment", class: "btn btn-primary" %>
    <% end %>

    </aside>  
  </div>

<%= link_to 'Edit', edit_breeder_path(@breeder) %> |
<%= link_to 'Back', breeders_path %>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>
